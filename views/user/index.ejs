<section>
  <h1>Users</h1>
  <% if (!users || users.length === 0) { %>
    <p class="text-muted">No users yet.</p>
  <% } else { %>
    <table class="table">
      <thead><tr><th>Name</th><th>Email</th><th>Role</th><th>Joined</th></tr></thead>
      <tbody>
        <% users.forEach(u => { %>
          <tr>
            <td><%= u.name || u.firstName || 'â€”' %></td>
            <td><%= u.email %></td>
            <td><%= u.role %></td>
            <td><%= new Date(u.createdAt).toLocaleDateString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</section>
