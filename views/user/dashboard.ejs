<!--views/user/dashboard.ejs-->

<section>
  <h2>Your Dashboard</h2>

  <% if (!user) { %>
    <p>Please <a href="/user/login">login</a> to access your dashboard.</p>
  <% } else { %>
    <p>Welcome back, <strong><%= user.firstName || user.name || user.email %></strong></p>

    <div class="dashboard-grid">
      <div class="card">
        <h3>Your investments</h3>
        <p><a href="/api/investments">View investments (API)</a></p>
      </div>

      <div class="card">
        <h3>Transactions</h3>
        <p><a href="/api/transactions">View transactions (API)</a></p>
      </div>

      <div class="card">
        <h3>Account</h3>
        <p>Balance: <strong>â‚¦<%= (user.walletBalance || 0).toLocaleString() %></strong></p>
      </div>
    </div>
  <% } %>
</section>

