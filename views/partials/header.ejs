<!--views/partials/header.ejs-->
<header class="site-header">
  <div class="container header-inner">
    <a class="brand" href="/">
      <img src="/images/logo.webp" alt="Chrenis" height="36" />
    </a>

    <nav class="main-nav" aria-label="Main navigation">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/projects">Projects</a></li>
        <li><a href="/investments">Invest</a></li>
        <li><a href="/users">Users</a></li>
      </ul>
    </nav>

    <div class="header-actions">
      <% if (user) { %>
        <span class="welcome">Hi, <%= user.firstName || user.name || user.email %></span>
        <a class="btn" href="/user/dashboard">Dashboard</a>
        <form class="inline-form" method="post" action="/auth/logout" style="display:inline">
          <button type="submit" class="btn btn-ghost">Sign out</button>
        </form>
      <% } else { %>
        <a class="btn" href="/auth/github">Sign in with GitHub</a>
        <a class="btn" href="/user/register">Register</a>
      <% } %>
      <button id="mobile-menu-toggle" aria-label="Open menu" class="mobile-toggle">â˜°</button>
    </div>
  </div>
</header>
